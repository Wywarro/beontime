{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" }
    ]
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "BeOnTime - API",
    "Audience": "BeOnTime - Clients"
  },
  "MongoDBOptions": {
    "ConnectionString": "mongodb://localhost",
    "Database": "beontime",
    "User": {
      "CollectionName": "Users",
      "ManageIndicies": true
    },
    "Role": {
      "CollectionName": "Roles",
      "ManageIndicies": true
    }
  },
  "EmailSender": {
    "SmtpServer": "smtp.gmail.com",
    "Port": 587,
    "Username": "beontimer@gmail.com"
  }
}